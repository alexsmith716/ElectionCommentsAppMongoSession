block content

  .main

    .container

      .row

        .col-lg-9.col-md-10.col-sm-11.col-xs-12.col-centered

          .panel-body
          

            if (message != undefined)

              if(type === 'success')
                .alert.alert-success(role="alert") #{message}

              if(type === 'warning')
                .alert.alert-warning(role="alert") #{message}

              if(type === 'danger')
                .alert.alert-danger(role="alert") #{message}


            h1= message

            h2= error.status

            pre #{error.stack}